    <form action="/form" method="post">
      <div class="mb-3">
        <div class="mb-3">
          <label for="meetingURL" class="form-label">Meeting URL *</label>
          <input
            type="url"
            class="form-control"
            id="meetingURL"
            name="meetingURL"
            required
            placeholder="Enter meeting URL"
          />
        </div>
        <br />

        <button type="submit" class="btn btn-primary mb-3">Submit</button>
        <br />
        <br />
        <br />
        <label for="meetingBotName" class="form-label"
          >Meeting Bot Name (optional)</label
        >
        <input
          type="text"
          class="form-control"
          id="meetingBotName"
          name="meetingBotName"
          placeholder="Enter meeting bot name"
        />
      </div>
      <div class="mb-3">
        <label for="meetingBotImage" class="form-label"
          >Meeting Bot Image (optional)</label
        >
        <input
          type="url"
          class="form-control"
          id="meetingBotImage"
          name="meetingBotImage"
          placeholder="Enter URL for meeting bot image"
        />
      </div>
      <div class="mb-3">
        <label for="meetingBotEntryMessage" class="form-label"
          >Meeting Bot Entry Message (optional)</label
        >
        <input
          type="text"
          class="form-control"
          id="meetingBotEntryMessage"
          name="meetingBotEntryMessage"
          placeholder="Enter meeting bot entry message"
          style="overflow-x: auto; white-space: nowrap"
        />
      </div>
